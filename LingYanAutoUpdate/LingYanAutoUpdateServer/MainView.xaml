<wd:Window
    x:Class="LingYanAutoUpdateServer.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LingYanAutoUpdateServer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
    Title="{Binding WindowTitle}"
    Width="600"
    Height="200"
    MinWidth="600"
    FontSize="14"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <StackPanel Margin="5">
        <Grid>
            <TextBlock
                Margin="0,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Bold"
                Foreground="#22A7F2">
                <Run Text="本地安装版本" />
                <Run Text="{Binding LocalVersion}" />
                <Run Text="=&gt;线上最新版本" />
                <Run Text="{Binding ServerVersion}" />
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Right"
                FontSize="15"
                FontWeight="Bold"
                Foreground="#22A7F2"
                Text="{Binding CurrentDecription}" />
        </Grid>
        <DockPanel>
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="微软雅黑"
                FontSize="13"
                FontWeight="Bold"
                Text="下载升级包：" />
            <ProgressBar
                Height="20"
                Margin="0,5,0,0"
                Value="{Binding DownloadModelInter.CuurentProgress}" />
        </DockPanel>
        <UniformGrid Margin="0,2" Columns="2">
            <TextBlock
                Margin="80,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Run Text="{Binding DownloadModelInter.DownloadSpeed, StringFormat={}{0:0.00}}" />
                <Run Text="MB/秒" />
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="15">
                <Run Text="{Binding DownloadModelInter.HasDownloadValue, StringFormat={}{0:0.00}}" />
                <Run Text="MB/" />
                <Run Text="{Binding DownloadModelInter.TotalDownloadValue, StringFormat={}{0:0.00}}" />
                <Run Text="MB" />
            </TextBlock>
        </UniformGrid>
        <DockPanel>
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="微软雅黑"
                FontSize="13"
                FontWeight="Bold"
                Text="解压升级包：" />
            <ProgressBar Height="20" Value="{Binding ExtractModelInter.CurrentExtractProgress}" />
        </DockPanel>
        <Grid Margin="0,2">
            <TextBlock
                Margin="80,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{Binding ExtractModelInter.CurrentFileName}" />
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="15">
                <Run Text="{Binding ExtractModelInter.CurrentFileIndex}" />
                <Run Text="当前/" />
                <Run Text="{Binding ExtractModelInter.TotalFiles}" />
                <Run Text="总数" />
            </TextBlock>
        </Grid>
    </StackPanel>
</wd:Window>
