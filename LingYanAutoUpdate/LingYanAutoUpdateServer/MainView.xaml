<Window
    x:Class="LingYanAutoUpdateServer.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="600"
    Height="380"
    MinWidth="600"
    MinHeight="380"
    AllowsTransparency="True"
    Background="{DynamicResource WindowBackgroundBrush}"
    FontSize="14"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F4F8FB" />
        <SolidColorBrush x:Key="DarkWindowBackgroundBrush" Color="#23272E" />
        <!--  新拟物风格卡片  -->
        <Style x:Key="NeumorphismCard" TargetType="Border">
            <!--<Setter Property="CornerRadius" Value="18" />-->
            <Setter Property="Background" Value="#F4F8FB" />
            <Setter Property="Padding" Value="18" />
            <Setter Property="Margin" Value="0,0,0,18" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="18"
                        Opacity="0.7"
                        ShadowDepth="2"
                        Color="#D0E6F7" />
                </Setter.Value>
            </Setter>
        </Style>
        <!--  新拟物风格进度条  -->
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="18" />
            <Setter Property="Margin" Value="0,8,0,0" />
            <Setter Property="Foreground" Value="#22A7F2" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#E6F0FA" />
                        <GradientStop Offset="1" Color="#D0E6F7" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#BFD8EF" />
            <Setter Property="BorderThickness" Value="1" />
            <!--<Setter Property="CornerRadius" Value="9"/>-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="9">
                            <Grid>
                                <Rectangle
                                    x:Name="PART_Track"
                                    Height="18"
                                    Fill="Transparent"
                                    RadiusX="9"
                                    RadiusY="9" />
                                <Rectangle
                                    x:Name="PART_Indicator"
                                    Width="0"
                                    Height="18"
                                    Fill="{TemplateBinding Foreground}"
                                    RadiusX="9"
                                    RadiusY="9" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Fill" Value="#BFD8EF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  标题字体  -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="微软雅黑" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#22A7F2" />
        </Style>
        <!--  普通字体  -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="微软雅黑" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>
    </Window.Resources>
    <Border Margin="30" Style="{StaticResource NeumorphismCard}">
        <Grid>
            <!--  新增关闭按钮  -->
            <Button
                x:Name="CloseButton"
                Width="28"
                Height="28"
                Margin="0,0,0,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#E6F0FA"
                BorderBrush="#D0E6F7"
                BorderThickness="1"
                Click="CloseButton_Click"
                Cursor="Hand"
                Style="{x:Null}"
                ToolTip="关闭">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22A7F2" />
                                <Setter Property="BorderBrush" Value="#22A7F2" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#22A7F2"
                    Text="×" />
            </Button>
            <!--  主体内容  -->
            <Grid Margin="0,28,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  顶部标题  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,12"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TitleText}" Text="{Binding WindowTitle}" />
                </StackPanel>

                <!--  版本信息  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Margin="0,0,12,0"
                        Padding="10,4"
                        Background="#E6F0FA"
                        CornerRadius="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="#22A7F2"
                                Text="当前版本: " />
                            <TextBlock Text="{Binding LocalVersion}" />
                        </StackPanel>
                    </Border>
                    <Border
                        Padding="10,4"
                        Background="#E6F0FA"
                        CornerRadius="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="#22A7F2"
                                Text="最新版本: " />
                            <TextBlock Text="{Binding ServerVersion}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
                <!--  下载进度  -->
                <Border
                    Grid.Row="2"
                    Margin="0,0,0,8"
                    Padding="12"
                    Background="#F8FAFC"
                    CornerRadius="10">
                    <StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="#22A7F2"
                                Text="下载升级包" />
                            <TextBlock Margin="16,0,0,0">
                                <Run Text="{Binding DownloadModelInter.DownloadSpeed, StringFormat={}{0:0.00}}" />
                                <Run Text=" MB/s" />
                            </TextBlock>
                            <TextBlock
                                Margin="16,0,0,0"
                                FontSize="13"
                                Foreground="#888">
                                <Run Text="{Binding DownloadModelInter.HasDownloadValue, StringFormat={}{0:0.00}}" />
                                <Run Text=" / " />
                                <Run Text="{Binding DownloadModelInter.TotalDownloadValue, StringFormat={}{0:0.00}}" />
                                <Run Text=" MB" />
                            </TextBlock>
                            <TextBlock
                                Margin="16,0,0,0"
                                FontSize="13"
                                Foreground="#22A7F2"
                                Text="{Binding DownloadModelInter.CuurentProgress, StringFormat={}{0:0}%}" />
                        </StackPanel>
                        <ProgressBar Maximum="100" Value="{Binding DownloadModelInter.CuurentProgress}" />
                    </StackPanel>
                </Border>
                <!--  解压进度  -->
                <Border
                    Grid.Row="3"
                    Padding="12"
                    Background="#F8FAFC"
                    CornerRadius="10">
                    <StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="#22A7F2"
                                Text="解压升级包" />
                            <TextBlock Margin="8,0,0,0" Text="{Binding ExtractModelInter.CurrentFileName}" />
                            <TextBlock
                                Margin="16,0,0,0"
                                FontSize="13"
                                Foreground="#888">
                                <Run Text="{Binding ExtractModelInter.CurrentFileIndex}" />
                                <Run Text=" / " />
                                <Run Text="{Binding ExtractModelInter.TotalFiles}" />
                            </TextBlock>
                            <TextBlock
                                Margin="16,0,0,0"
                                FontSize="13"
                                Foreground="#22A7F2"
                                Text="{Binding ExtractModelInter.CurrentExtractProgress, StringFormat={}{0:0}%}" />
                        </StackPanel>
                        <ProgressBar Maximum="100" Value="{Binding ExtractModelInter.CurrentExtractProgress}" />
                    </StackPanel>
                </Border>
                <!--  状态描述  -->
                <TextBlock
                    Grid.Row="4"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Right"
                    FontSize="14"
                    Foreground="#2C2815"
                    Text="{Binding CurrentDecription}" />
            </Grid>
        </Grid>
    </Border>
</Window>
