<Window
    x:Class="LingYanAutoUpdateServer.CustomConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="320"
    Height="150"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    Opacity="0"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Resources>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="1"
                        Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <!--  小范围半透明遮罩层  -->
        <Border
            Width="310"
            Height="150"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#40000000" />
        <Border
            MinWidth="280"
            Margin="8"
            Padding="18"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#F4F8FB">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="16"
                    Opacity="0.7"
                    ShadowDepth="2"
                    Color="#D0E6F7" />
            </Border.Effect>
            <StackPanel>
                <TextBlock
                    x:Name="TitleBlock"
                    Margin="0,0,0,8"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#22A7F2" />
                <TextBlock
                    x:Name="MsgBlock"
                    Margin="0,0,0,18"
                    FontSize="14"
                    Foreground="#2C3E50"
                    TextWrapping="Wrap" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="YesBtn"
                        Margin="0,0,8,0"
                        Padding="30,5"
                        Background="#22A7F2"
                        BorderThickness="0"
                        Content="确定"
                        Cursor="Hand"
                        Foreground="White" />
                    <Button
                        x:Name="NoBtn"
                        Padding="30,5"
                        Background="#E6F0FA"
                        BorderThickness="0"
                        Content="取消"
                        Cursor="Hand"
                        Foreground="#22A7F2" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>